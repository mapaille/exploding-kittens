<div class="card @CardTypeClass(Model.Type)">
    <div class="flex">
        @if (Model.CanBeDiscarded())
        {
            <button @onclick="Model.Discard" title="Défausser">D</button>
        }

        @if (Model.CanBeTransferred())
        {
            <button @onclick="Model.Transfer" title="Transférer à l'autre joueur">T</button>
        }

        @if (Model.CanBePutBackInPile())
        {
            <button @onclick="Model.PutBackInPile" title="Remettre dans la pile">R</button>
        }

        @if (ActivePlayer != null && ActivePlayer.CanTakeCard(Model))
        {
            <button @onclick="() => ActivePlayer.TakeCard(Model)" title="Ramasser">R</button>
        }

    </div>

    <h3>@Model.Name</h3>
</div>
